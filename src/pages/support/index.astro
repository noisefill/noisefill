---
import PostHog from "../../components/posthog.astro";
import "../../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <meta
      name="description"
      content="A super simple support page that explains how to get support for the Noisefill app."
    />
    <meta
      name="keywords"
      content="support, noisefill, lo-fi, soundscapes, focus, calm, energy, radio, free, website, music, noise, ambient, chill, study, work, relax, sleep, meditation, productivity, relaxation, focus, calm, energy, radio, free, website, music, noise, ambient, chill, study, work, relax, sleep, meditation, productivity, relaxation"
    />
    <meta name="author" content="Noisefill" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="bingbot" content="index, follow" />
    <meta name="yandexbot" content="index, follow" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#000000" />
    <link rel="canonical" href="https://noisefill.com/support" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://noisefill.com/support" />
    <meta property="og:title" content="Support - Noisefill" />
    <meta
      property="og:description"
      content="A super simple support page that explains how to get support for the Noisefill app."
    />
    <meta property="og:image" content="/og.webp" />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://noisefill.com/support" />
    <meta property="twitter:title" content="Support - Noisefill" />
    <meta
      property="twitter:description"
      content="A super simple support page that explains how to get support for the Noisefill app."
    />
    <meta property="twitter:image" content="/og.webp" />
    <title>Support - Noisefill</title>
    <PostHog />
  </head>
  <body class="dark:bg-[#111111]">
    <div class="w-full max-w-full mx-auto py-12 px-8">
      <h1 class="text-2xl font-bold">Support</h1>
      <p class="text-sm text-muted-foreground pt-1 font-medium">
        Contact us at <a href="mailto:hi@noisefill.com" class="text-blue-500"
          >hi@noisefill.com</a
        > for support.
      </p>
    </div>
  </body>
</html>
